{
    "categories": [
      {
        "title": "## üöÄ Features",
        "labels": ["feature"]
      },           
      {
        "title": "## üêõ Bug Fixes",
        "labels": ["bug"]
      }, 
      {
        "title": "## üìÉ Documentation",
        "labels": ["documentation"]
      },     
      {
         "title": "## üì¶ Uncategorized",
         "labels": []
      }       
    ],
    "ignore_labels": [
      "CI", "CD"
    ],
    "sort": "ASC",
    "template": "${{CHANGELOG}}\n\n",
    "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in PR #${{NUMBER}}",
    "empty_template": "- no changes",
    "label_extractor": [
      {
        "pattern": "(.) (.+)",
        "target": "$1",
        "flags": "gu"
      },
      {
        "pattern": "\\[Issue\\]",
        "on_property": "title",
        "method": "match"
      }
    ],
    "duplicate_filter": {
      "pattern": "\\[ABC-....\\]",
      "on_property": "title",
      "method": "match"
    },
    "transformers": [
      {
        "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
        "target": "- $4\n  - $6"
      }
    ],
    "max_tags_to_fetch": 200,
    "max_pull_requests": 200,
    "max_back_track_time_days": 365,
    "exclude_merge_branches": [
      "Owner/qa"
    ],
    "tag_resolver": {
      "method": "semver",
      "filter": {
        "pattern": "api-(.+)",
        "flags": "gu"
      }
    },
    "base_branches": [
      "main"
    ]
}